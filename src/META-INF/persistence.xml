<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
    <persistence-unit name="tp2-hibernatePU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>Acteur</class>
        <class>Adresse</class>
        <class>Appartement</class>
        <class>BatimentPublic</class>
        <class>Charpente</class>
        <class>Dallage</class>
        <class>Eletricite</class>
        <class>Entreprise</class>
        <class>Fondation</class>
        <class>Hopital</class>
        <class>Immeuble</class>
        <class>Lotissement</class>
        <class>Lots</class>
        <class>Maconnerie</class>
        <class>Maison</class>
        <class>Menuiseries</class>
        <class>Musee</class>
        <class>Peinture</class>
        <class>Platerie</class>
        <class>Projet</class>
        <class>Reseaux</class>
        <class>Terrassement</class>
        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/tp2hibernate?zeroDateTimeBehavior=convertToNull"/>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
            <property name="javax.persistence.jdbc.user" value="root" />
            <property name="javax.persistence.jdbc.password" value="" />
            <property name="javax.persistence.schema-generation.database.action" value="update"/>
        </properties>
    </persistence-unit>
</persistence>